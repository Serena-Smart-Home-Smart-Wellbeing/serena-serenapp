<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SerenBoxDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="SerenBox" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/difusser_pic_3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/card_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_img_card"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_left"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/difusser_pic_3"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="Slot A : "/>
                    <TextView
                        android:id="@+id/slot_a_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:id="@+id/slot_a_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_color_4"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:text="Capcut Oil"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/capacity_slot_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="/"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/current_capacity_slot_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="s0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="ml"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_img_card"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_right"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/difusser_pic_3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_color_4"
                    android:gravity="center"
                    android:text="Slot A Energetic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_color_4"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:text="Capcut Oil"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="/"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_color_4"
                        android:gravity="center"
                        android:text="ml"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/base_color_3"
            app:cardElevation="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:foregroundGravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp">
            <Button
                android:id="@+id/use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@android:color/transparent"
                android:textColor="@color/base_color_4"
                android:text="Use" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>