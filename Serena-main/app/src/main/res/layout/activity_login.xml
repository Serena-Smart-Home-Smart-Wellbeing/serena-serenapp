<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical">
    <com.google.android.material.button.MaterialButton
        android:contentDescription="@string/button_login"
        android:layout_width="48dp"
        android:id="@+id/back"
        android:layout_height="48dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/ic_arrow_back_ios_new_24"
        app:iconSize="20dp"
        app:iconPadding="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:text="@string/back"
        app:iconTint="@color/sm_black"
        android:backgroundTint="@color/base_color_4"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color_1"
        android:alpha="0.3" />

    <TextView
        android:id="@+id/header_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="@string/login"/>

    <LinearLayout
        android:id="@+id/welcome_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/header_text_title"
        android:gravity="center">

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_logo"
            android:src="@drawable/serena_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/welcome_header"
        android:id="@+id/input_email"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/prompt_email"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/baseline_email_24"
            app:hintEnabled="false"
            app:boxBackgroundMode="none"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="0dp"
                android:gravity="center_vertical"
                android:hint="@string/prompt_email"
                android:background="@drawable/rounded_10dp"
                android:maxLines="1"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/input_email"
        android:id="@+id/input_password"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:contentDescription="@string/prompt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:text="@string/prompt_password"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:endIconMode="password_toggle"
            app:hintEnabled="false"
            app:boxBackgroundMode="none"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="0dp"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_10dp"
                android:hint="@string/prompt_password"
                android:maxLines="1"
                android:paddingTop="18dp"
                android:paddingBottom="18dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/base_color_3"
        app:cardElevation="0dp"
        android:layout_below="@+id/input_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:foregroundGravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp">
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/base_color_4"
            android:text="@string/login" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>

